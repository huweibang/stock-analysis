{
    "include": [
        "src/renderer/src/env.d.ts",
        "src/renderer/src/**/*",
        "src/renderer/src/**/*.tsx",
        "src/preload/*.d.ts"
    ],
    "compilerOptions": {
        "composite": true,
        "jsx": "react",
        // "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/renderer/src/*"
            ],
            "@renderer/*": [
                "src/renderer/src/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}